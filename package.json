{
  "name": "epigraph",
  "private": true,
  "version": "1.0.0",
  "workspaces": ["packages/server", "packages/client"],
  "scripts": {
    "dev": "yarn dev:server && yarn dev:client",
    "dev:client": "yarn workspace @epigraph/client dev",
    "dev:server": "yarn workspace @epigraph/server dev",
    "build": "yarn build:client && yarn build:server",
    "build:client": "yarn workspace @epigraph/client build",
    "build:server": "yarn workspace @epigraph/server build",
    "serve": "node packages/server/dist/lib/index.js",
    "postinstall": "husky",
    "prepare": "husky"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "husky": "^9.0.11",
    "prettier": "^3.6.2",
    "typescript": "^5.2.2"
  },
  "packageManager": "yarn@4.5.0",
  "dependencies": {
    "primeflex": "^4.0.0"
  }
}
